alias aphp="docker exec -ti kraft-backend_php"
alias runtests="aphp bin/console doctrine:migrations:migrate -n --env=test && aphp vendor/bin/simple-phpunit"
alias runTestsNoDeprecation="docker exec -ti kraft-backend_php bin/console doctrine:migrations:migrate -n --env=test && docker exec -ti -e SYMFONY_DEPRECATIONS_HELPER=disabled kraft-backend_php vendor/bin/simple-phpunit"
alias dropDB="aphp bin/console doctrine:schema:drop --force --full-database"
alias dMigrate="aphp bin/console doctrine:migrations:migrate -n"
alias dLoad="aphp bin/console doctrine:fixtures:load -n"
alias dropNmigrate="dropDB && dMigrate"
alias logintoDB="docker exec -ti dismoi-backend-devdb mysql -uroot -ppassword -D kraftbackenddev"
